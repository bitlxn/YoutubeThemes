{
  "name": "youtube-themes",
  "version": "0.0.1",
  "description": "The clock which shows time and date quickly. It has background images correspond to the periods of a day.",
  "permissions": [
    "declarativeContent"
  ],
  "manifest_version": 2,
  "background": {
    "content_scripts": "background.js"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo/yt-theme-16.png",
      "32": "images/logo/yt-theme-32.png",
      "48": "images/logo/yt-theme-48.png",
      "128": "images/logo/yt-theme-128.png"
    }
  },
  "icons": {
    "16": "images/logo/yt-theme-16.png",
    "32": "images/logo/yt-theme-32.png",
    "48": "images/logo/yt-theme-48.png",
    "128": "images/logo/yt-theme-128.png"
  }
}